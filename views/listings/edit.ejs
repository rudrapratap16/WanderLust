<%layout("/layouts/boilerplate")%>
<body>
    <div class="row mt-3">
        <div class="col-8 offset-2">

            <h3>Edit This Listing</h3>
            <form method="post" action="/listings/<%=listing._id%>?_method=PUT" novalidate class="needs-validation">
                <div class="md-3">
                    <lable for="title" class="form-label">Title</lable>
                    <input name="listing[title]" value="<%=listing.title%>" class="form-control" required>
                    <div class="invalid-feedback">Title should be valid</div>
                </div>
                <div class="md-3">
                    <lable for="description" class="form-label">Description</lable>
                    <textarea class="form-control" name="listing[description]" required><%=listing.description%></textarea>
                    <div class="invalid-feedback">Description should be valid</div>
                </div>
                <div class="md-3">
                    <lable for="image" class="form-label">Image</lable>
                    <textarea class="form-control" name="listing[image]" required><%=listing.image%></textarea>
                    <div class="invalid-feedback">Image should be valid</div>
                </div>
                <div class="row mt-3">
                    <div class="md-3 col-md-4">
                        <lable for="price" class="form-label">Price</lable>
                        <input name="listing[price]" value="<%=listing.price%>" class="form-control" type="number" required>
                        <div class="invalid-feedback">Price should be valid</div>
                    </div>
                    <div class="md-3 col-md-8">
                        <lable for="country" class="form-label">Country</lable>
                        <input name="listing[country]" value="<%=listing.country%>" class="form-control" required>
                        <div class="invalid-feedback">Country should be valid</div>
                    </div>
                </div>
                <div class="md-3">
                    <lable for="location" class="form-label">Location</lable>
                    <input name="listing[location]" value="<%=listing.location%>" class="form-control" required>
                    <div class="invalid-feedback">Location should be valid</div>
                </div>
                <button class="btn btn-dark edit-btn mt-3">Add</button>
            </form>
        </body>
        </div>
    </div>